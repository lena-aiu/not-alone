<div class= "container-fluid">
  <%= form_for([@customer,@order]) do |f| %>
    <% if @order.errors.any? %>
      <div id="error_explanation" class="my_alert">
        <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>
        <ul>
          <% @order.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <label for="customer"><%= t ("Client")%></label>
      <%= f.collection_select :customer_id, Customer.all, :id, :full_name, include_blank: true %>
    </div>

    <div class="form-group">
      <label for="customer"><%= t ("Service")%></label>
      <%# <%= f.label :services %> 
      <%= f.collection_select :service_id, Service.all, :id, :name, include_blank: true %>
    </div>

    <div class="form-group">
      <label for="category"><%= t ("Category")%></label>
      <%= f.collection_select :category_id, Category.all, :id, :name, include_blank: true %>
    </div>
      
    <div class="form-group">
        <label for="description"><%= t ("Description")%></label>
        <%= f.text_field :description %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>