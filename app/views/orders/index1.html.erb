<p id="notice"><%= notice %></p>

<h1 class="title mt-5 mb-5 display-3" style="text-align: center;">Orders</h1>
<div class="table-responsive card mb-5">
<table class="table table-hover">
  <thead>
    <tr>
      <th class="h2" style="background:none;"> Description</th>
      <th colspan="3" style="background:none;"></th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.description %></td>
        <td><%= link_to 'Show', order, :class => "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_order_path(order), :class => "btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to 'Delete', order, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-outline-primary btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
<%= link_to 'New Order', new_order_path, :class => "btn btn-primary btn-lg", :style => "margin-left: 14px; color: white"  %>


