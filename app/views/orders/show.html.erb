<p id="notice"><%= notice %></p>

<p>
  <strong><%= t ("Client")%></strong>
  <%= @order.customer.full_name %>
</p>
<p>
  <strong><%= t ("Service Name")%></strong>
  <%= @order.service.name %>
</p>
<p>
  <strong><%= t ("Kind of Service")%></strong>
  <%= @order.service.kind %>
</p>
<p>
  <strong><%= t ("Category")%></strong>
  <%= @order.category.name %>
</p>
<p>
  <strong><%= t ("Description")%></strong>
  <%= @order.description %>
</p>
<% if current_user.role.include?("administrator") || current_user.role.include?("intern")%>
  <%= link_to t('edit'), edit_order_path(@order), :class => "btn btn-primary btn-sm", :style => "color: white" %>
  <%= link_to t('back'), customer_path(@order.customer), :class => "btn btn-primary btn-sm", :style => "color: white" %>
<% end %>
<% if current_user.role.include?("volunteer") %>
  <%= link_to t('back'), customer_path(@order.customer), :class => "btn btn-primary btn-sm", :style => "color: white" %>
<% end %>






  
