<p id="notice"><%= notice %></p>

<div class="container">
  <div class="row">
    <div class="col-md-4">
      <address>
        <h2><strong><%= @assignment.customer.first_name %></strong></h2>
        <h2><strong><%= @assignment.customer.last_name %></strong></h2>
        <%= @assignment.customer.street %><br>
        <%=  @assignment.customer.city %>
        <%=  @assignment.customer.state %>
        <%=  @assignment.customer.zip %><br>
        <strong>Phone</strong>
        <%=  @assignment.customer.phone %><br>
        <strong>Email</strong>
        <a href="mailto:#"><%=  @assignment.customer.email %></a>
      </address>
    </div>
  </div>
  <p>
    <h4><strong>Assignment Status</strong></h4>
    <%= @assignment.status %>
  </p>
  <% if current_user.role.include?("administrator") || current_user.role.include?("intern")%>
    <%= link_to 'Edit', edit_assignment_path(@assignment), :class => "btn btn-primary btn-sm", :style => "color: white" %>
    <%= link_to 'Back', customer_path(@assignment.customer), :class => "btn btn-primary btn-sm", :style => "color: white" %>
  <% end %>
  <% if current_user.role.include?("volunteer") %>
    <%= link_to 'Back', customer_path(@assignment.customer), :class => "btn btn-primary btn-sm", :style => "color: white" %>
  <% end %>
</div>
